{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}

<!-- notre lien css -->
<link rel="stylesheet" href="{{ asset('build/css/navFooter.css') }}"> 
<link rel="stylesheet" href="{{ asset('build/css/register.css') }}"> 


<!-- Boostrap -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
      crossorigin="anonymous"
    />


{% endblock %}

{% block body %}

<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
            <h3>Bienvenue</h3>
            <p>Inscrivez-vous et achetez la voiture de vos rêves !</p>
            <btn class="buttonClass"/> se connecter<btn/>
        </div>
        <div class="col-md-9 register-right">
            <div style="
            display: flex !important;
            justify-content: center !important;
            align-items: center !important;
            flex-direction: column !important;" >
                <h3 class="register-heading">Inscription</h3>
                <div class="row register-form flexCenterCollum ">
                    <div class="col-md-6 flexCenterCollum opaccityForm ">

                        {{ form_start(form) }}

                        {{ form_row(form.firstName) }}
                        {{ form_row(form.lastName) }}

                                
                        {{ form_row(form.password) }}
                        {{ form_row(form.passwordConfirm) }}
                        
                            
                    </div>
                    <div class="col-md-6 flexCenterCollum opaccityForm ">

            
                        {{ form_row(form.email , { 'label_attr': { 'class' : "mt-3"}}) }}
                        {{ form_row(form.adress) }}
                        {{ form_row(form.country) }}
                        {{ form_row(form.avatard) }}

                        <input type="submit" class="btnRegister"  value="Confirmez l'inscription"/>
                    </div>
                </div>
            </div>
        
        </div>
    </div>

</div>


